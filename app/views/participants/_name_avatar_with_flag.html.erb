<% if !defined?(avatar) || (defined?(avatar) && avatar && avatar != 'false') %>
  <%= participant_avatar(participant, "avatar profile-image") %>
  <% if participant.country_cd.present? %>
    <%= image_tag("/assets/flags/#{participant.country_cd}.svg", class: "country-flag #{flag_class}") %>
  <% end %>
<% end %>
