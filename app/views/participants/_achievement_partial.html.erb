<div id="achievement-tab" class="container-fluid">
  <div class="row">
    <% participant_badge_data.each do |badge, result| %>
      <div class="column" style="margin-bottom: 10%; margin-right: 1%;">
        <% show_share = result[:active_badge].is_a?(Integer) ? false : true %>
        <% if result[:badges].count == 3 %>
          <%= react_component("organisms/AchievementListItem/index", { icon: result[:icon], progress: result[:current_points].to_i, target: {bronze_count: result[:badges].first.target, silver_count: result[:badges].second.target, gold_count: result[:next_badge].target}, title: badge, description: (result[:active_badge].description rescue 'Please perform more actions to unlock this badge.'), hideFirst: false, hideBronze: false, showShare: show_share}) %>
        <% elsif result[:badges].count == 1%>
          <%= react_component("organisms/AchievementListItem/index", { icon: result[:icon], progress: result[:current_points].to_i, target: {bronze_count: result[:badges].first.target, silver_count: result[:badges].first.target, gold_count: result[:next_badge].target}, title: badge, description: (result[:active_badge].description rescue 'Please perform more actions to unlock this badge.'), hideFirst: false, hideBronze: true, showShare: show_share}) %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>