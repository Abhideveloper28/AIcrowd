<%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>

<%= render partial: 'shared/challenges/masthead', locals: {challenge: @challenge, challenge_rounds: @challenge_rounds, vote: @vote, follow: @follow} %>
<%= render partial: 'challenges/show/subnav', locals: {challenge: @challenge} %>

<section class="section-p-sm">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <%= render partial: 'insights/_charts/challenge_participants_country', locals: {challenge: @challenge, index: 1, country_wise_data: @country_wise_data} %>
        <% if @challenge.active_round.present? %>
          <%= render partial: 'insights/_charts/submissions_vs_time', locals: {challenge: @challenge, challenge_rounds: @challenge_rounds, index: 1} %>
          <%= render partial: 'insights/_charts/top_score_vs_time', locals: {challenge: @challenge, challenge_rounds: @challenge_rounds, index: 2} %>
          <% if current_participant && policy(@challenge).edit? %>
            <%= render partial: 'insights/_charts/participant_count', locals: {challenge: @challenge, challenge_rounds: @challenge_rounds, index: 3} %>
            <%= render partial: 'insights/_charts/success_vs_total', locals: {challenge: @challenge, challenge_rounds: @challenge_rounds, index: 4} %>
          <% end %>
        <% else %>
          <p class="text-center">There is no active round for this challenge.</p>
        <% end %>
      </div>
    </div>
  </div>
</section>
